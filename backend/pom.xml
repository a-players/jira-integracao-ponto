        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.17.0</version> <!-- Ou a versão mais recente -->
        </dependency>

        <!-- Dependências locais da Tempo -->
